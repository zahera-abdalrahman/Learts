@model SmallBusiness.ViewModels.ContactFormViewModel
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 <!-- Contact Information & Map Section Start -->
<div class="section section-padding">
    <div class="container">
        <!-- Section Title Start -->
        <div class="section-title2 text-center">
            <h2 class="title">Keep in touch with us</h2>
            <p>Been tearing your hair out to find the perfect gift for your loved ones? Try visiting our nationwide local stores. You can also contact us to become partner or distributor. Call us, send us an email or make an appointment now.</p>
        </div>
        <!-- Section Title End -->
        <!-- Contact Information Start -->
        <div class="row learts-mb-n30">
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title">ADDRESS</h4>
                    <span class="info"><i class="icon fas fa-map-marker-alt"></i> Jordan,Amman</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title">CONTACT</h4>
                    <span class="info"><i class="icon fas fa-phone-alt"></i> Mobile: (+962)796684240</span>
                    <span class="info"><i class="icon far fa-envelope"></i> Mail: <a href="#">Learts2024@gmail.com</a></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title"> HOUR OF OPERATION</h4>
                    <span class="info"><i class="icon far fa-clock"></i> Monday – Friday : 09:00 – 20:00 <br> Sunday & Saturday: 10:30 – 22:00</span>
                </div>
            </div>
        </div>
        <!-- Contact Information End -->
        <!-- Contact Map Start -->
        <div class="row learts-mt-60">
            <div class="col">
                <iframe class="contact-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d27076.03371976073!2d35.94538754999999!3d31.974344350000003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151b5fd9a6ce8763%3A0x79808ed49db4ff79!2sBasman%2C%20Amman!5e0!3m2!1sen!2sjo!4v1706166336860!5m2!1sen!2sjo" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
        <!-- Contact Map End -->

    </div>
</div>
<!-- Contact Information & Map Section End -->




<!-- Contact Form Section Start -->
<div class="section section-padding pt-0">
    <div class="container">
        <!-- Section Title Start -->
        <div class="section-title2 text-center">
            <h2 class="title">Send a message</h2>
        </div>
        <!-- Section Title End -->

        <div class="row">
            <div class="col-lg-8 col-12 mx-auto">
                <div class="contact-form">
                    <form asp-controller="Contact" asp-action="SendMessage" method="post" id="contact-form">
                        <div class="row learts-mb-n30">
                            <div class="col-md-6 col-12 learts-mb-30">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input asp-for="Name" class="form-control" placeholder="Your Name *"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 col-12 learts-mb-30">
                                <input asp-for="Email" class="form-control" placeholder="Email *" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12 learts-mb-30">
                                <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="col-12 text-center learts-mb-30">
                                <button type="submit" class="btn btn-dark btn-outline-hover-dark">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Contact Form Section End -->
<!-- Add this script to handle the form submission and show SweetAlert -->
<script>
    $(document).ready(function () {
        $("#contact-form").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SendMessage", "Contact")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (data) {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Your message has been sent successfully.',
                        });

                        $("#contact-form")[0].reset();
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Something went wrong. Please try again.',
                    });
                }
            });
        });
    });
</script>


