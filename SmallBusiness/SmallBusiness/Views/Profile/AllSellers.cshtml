<!-- Portfolio Section Start -->
<div class="section section-padding">
    <div class="container">
        <div class="row row-cols-lg-3 row-cols-sm-2 row-cols-1 learts-mb-n30">
             @foreach (var profile in ViewBag.AllSellers)
            {
                
            <div class="col learts-mb-30">
                <div class="portfolio">
                        <div class="thumbnail"><img src="~/Profile/@profile.ProfileImage" alt=""></div>
                    <div class="content">
                            <h4 class="title"><a href="portfolio-details.html">@profile.ShopName</a></h4>
                        <div class="desc">
                                @{
                                    // Split the description into words
                                    string[] words = profile.Description.Split(' ');

                                    // Take the first 5 words
                                    string first5Words = string.Join(" ", words.Take(10));

                                    // Display the first 5 words
                                    <p>@first5Words...</p>
                                }
                        </div>
                            <div class="link"><a href="@Url.Action("ProfileDetails", "Profile", new { profileId = profile.ProfileId })">Read more</a></div>
                    </div>
                </div>
            </div>

           }

        </div>

    </div>

</div>
<!-- Portfolio Section End -->