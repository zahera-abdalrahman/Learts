@model SmallBusiness.ViewModels.ProfileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="section section-padding">
    <div class="container">
        <div class="row g-0" style="justify-content:center">
            <div class="col-lg-6">
                <div class="user-login-register bg-light">
                    <div class="login-register-title">
                        <h2 class="title">Profile</h2>
                        <p class="desc">Great to have you back!</p>
                    </div>
                    <div class="login-register-form">
                        <img id="previewImage" src="~/2024.png" style="width:300px;height:300px;border-radius:50%;margin:auto;display:flex;justify-content:center;" class="mb-3" />

                        <form asp-action="Profile" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="UserId" />

                            <div class="row learts-mb-n50">
                                <div class="col-12 learts-mb-50">
                                    <label asp-for="ProfileImage">Profile Image</label>
                                    <input asp-for="File" type="file" class="form-control" id="fileInput" />
                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                </div>
                                <div class="col-12 learts-mb-50">
                                    <label asp-for="ShopName">Shop Name</label>
                                    <input asp-for="ShopName" class="form-control" />
                                    <span asp-validation-for="ShopName" class="text-danger"></span>
                                </div>


                                <div class="col-12 learts-mb-50">
                                    <label asp-for="Description">Description</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="col-12 learts-mb-50">
                                    <label asp-for="FacebookLink">Facebook</label>
                                    <input asp-for="FacebookLink" class="form-control" />
                                    <span asp-validation-for="FacebookLink" class="text-danger"></span>
                                </div>

                                  <div class="col-12 learts-mb-50">
                                    <label asp-for="InstagramLink">Instagram</label>
                                    <input asp-for="InstagramLink" class="form-control" />
                                    <span asp-validation-for="InstagramLink" class="text-danger"></span>
                                </div>

                                <div class="col-12 learts-mb-50">
                                    <label asp-for="PinterestLink">Pinterest</label>
                                    <input asp-for="PinterestLink" class="form-control" />
                                    <span asp-validation-for="PinterestLink" class="text-danger"></span>
                                </div>
                                <div class="col-12 text-center learts-mb-50">
                                    <button type="submit" class="btn btn-dark btn-outline-hover-dark">Create</button>
                                </div>
                              
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add this script to your Razor Page or in a separate JavaScript file -->
<script>
    function previewImage(input) {
        var preview = document.getElementById('previewImage');
        var file = input.files[0];

        if (file) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            };

            reader.readAsDataURL(file);
        }
    }

    // Attach the previewImage function to the change event of the file input
    document.getElementById('fileInput').addEventListener('change', function () {
        previewImage(this);
    });
</script>
