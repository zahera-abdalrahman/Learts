@model List<OrderItems>

<!-- Your view content -->

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Seller">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Order">Orders</a></li>
            <li class="breadcrumb-item" active>Orders</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderItem in Model)
                            {
                                <tr>
                                    <td>@orderItem.Order.OrderId</td>
                                    <td>@orderItem.Product.ProductName</td>
                                    <td>@orderItem.ProductQuantity</td>
                                    <td>@orderItem.Product.ProductPrice</td>
                                    <td>
                                        <img src="~/CategoryImg/@orderItem.Product.ImageUrl" style="width:90px">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-end">
                        <a asp-action="Index" class="btn btn-outline-primary">Back to Orders</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>