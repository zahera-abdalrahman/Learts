@model SmallBusiness.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Product">Product</a></li>
            <li class="breadcrumb-item" active>Edit Product</li>

        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body pt-3">
        <div class="row">
            <div class="col-md-12">
                <img id="previewImage" src="~/CategoryImg/@Model.ImageUrl" style="width:300px;height:300px;border-radius:50%;margin:auto;display:flex;justify-content:center;" class="mb-3" />
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductDescription" class="control-label"></label>
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductQuantityStock" class="control-label"></label>
                        <input asp-for="ProductQuantityStock" class="form-control" />
                        <span asp-validation-for="ProductQuantityStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductSale" class="control-label"></label>
                        <input asp-for="ProductSale" class="form-control" />
                        <span asp-validation-for="ProductSale" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label"></label>
                        <input asp-for="File" class="form-control" id="fileInput" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <input type="hidden" asp-for="ImageUrl" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end">
                        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Add this script to your Razor Page or in a separate JavaScript file -->
<script>
    function previewImage(input) {
        var preview = document.getElementById('previewImage');
        var file = input.files[0];

        if (file) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            };

            reader.readAsDataURL(file);
        }
    }

    // Attach the previewImage function to the change event of the file input
    document.getElementById('fileInput').addEventListener('change', function () {
        previewImage(this);
    });
</script>
