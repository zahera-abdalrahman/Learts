@model IEnumerable<SmallBusiness.Models.Review>

@{
    ViewData["Title"] = "Index";
}
<style>
    .message-container {
        position: relative;
        max-width: 300px; /* Adjust according to your layout */
        overflow: hidden;
    }

    .message {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .message.expanded {
            white-space: normal;
            overflow: visible;
            text-overflow: unset;
        }

    .show-more-btn {
        background: transparent;
        border: none;
        cursor: pointer;
    }
</style>
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin">Home</a></li>
            <li class="breadcrumb-item" active>Reviews</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <table class="table datatable table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReviewMessage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReviewRate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReviewDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="message-container">
                                            <p class="message">
                                                @Html.DisplayFor(modelItem => item.ReviewMessage)
                                            </p>
                                            <button class="show-more-btn text-primary">Show More</button>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReviewRate)/5
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReviewDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.FirstName)
                                    </td>
                                    <td>
                                        <img src="~/CategoryImg/@item.Product.ImageUrl" style="width:90px">
                                    </td>

                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.ReviewId" class="btn btn-primary">
                                            <i class="ri-file-list-2-line"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('.message-container').each(function () {
            var $message = $(this).find('.message');
            var words = $message.text().trim().split(/\s+/).length;
            if (words <= 3) {
                $(this).find('.show-more-btn').hide();
            }
        });

        $('.show-more-btn').click(function () {
            var $message = $(this).prev('.message');
            $message.toggleClass('expanded');
            if ($message.hasClass('expanded')) {
                $(this).text('Show Less');
            } else {
                $(this).text('Show More');
            }
        });
    });
</script>

