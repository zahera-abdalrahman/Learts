@using SmallBusiness.List;
@model SmallBusiness.Models.Seller
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
        }

        h1 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        hr {
            border: 1px solid #ccc;
            margin: 20px 0;
        }

        dl.row {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        dt, dd {
            padding: 10px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
            margin: 0;
        }

        dt {
            font-weight: bold;
            background-color: #eee;
        }

        dd {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="GetSellers" asp-controller="Admin" asp-area="Admin">Sellers</a></li>
                <li class="breadcrumb-item active">Seller Details</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
              
                <div>
                    <hr />
                    <dl class="row">
                       
                        <dt>
                            <strong>Email:</strong>
                        </dt>
                        <dd>
                            @Model.Email
                        </dd>

                        <dt>
                            <strong>First Name:</strong>
                        </dt>
                        <dd>
                            @Model.FirstName
                        </dd>

                        <dt>
                            <strong>Last Name:</strong>
                        </dt>
                        <dd>
                            @Model.LastName
                        </dd>

                        <dt>
                            <strong>Image:</strong>
                        </dt>
                        <dd>
                            <img src="~/User/@Model.Image" style="width:80px" />
                        </dd>

                        <dt>
                            <strong>City:</strong>
                        </dt>
                        <dd>
                            @((Cities)Enum.Parse(typeof(Cities), Model.City))
                        </dd>
                        <dt>
                            <strong>Subscriptions:</strong>
                        </dt>
                        <dd>
                            @foreach (var subscription in Model.Subscriptions)
                            {
                                <div>
                                    <p>Start Date: @subscription.SubscriptionStartDate.ToShortDateString()</p>
                                    <p>End Date: @subscription.SubscriptionEndDate.ToShortDateString()</p>
                                    <p>Status: @subscription.status.ToString()</p>
                                    <p>Price: $@subscription.Price</p>
                                </div>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="text-end">
                    <a asp-action="getSellers" asp-controller="Admin" asp-area="Admin" class="btn btn-outline-primary">Back to List</a>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("ProfileDetails", "Admin", new { sellerId = Model.Id })'">Profile Details</button>
                </div>
               
            </div>
        </div>
    </div>
</body>
</html>
