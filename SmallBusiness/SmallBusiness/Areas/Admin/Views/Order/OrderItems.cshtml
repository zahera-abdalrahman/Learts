@model List<SmallBusiness.Models.OrderItems>

@{
    ViewData["Title"] = "Order Items";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Order">Orders</a></li>
            <li class="breadcrumb-item" active>Order Items</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body pt-3">
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Product Price</th>
                                <th>Product Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderItem in Model)
                            {
                                <tr>
                                    <td>@orderItem.Product.ProductName</td>
                                    <td>@orderItem.ProductQuantity</td>
                                    <td>@orderItem.Product.ProductPrice</td>
                                    <td>
                                        <img src="~/CategoryImg/@orderItem.Product.ImageUrl" style="width:90px">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-end">
                        <a asp-action="Index" class="btn btn-outline-primary">back</a>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



